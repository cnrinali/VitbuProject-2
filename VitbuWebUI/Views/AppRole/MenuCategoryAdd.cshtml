@model MenuCategory

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body table-responsive p-2">
                    <form asp-controller="AppRole" asp-action="MenuCategoryAdd" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="CategoryName"></label>
                            <input asp-for="CategoryName" class="form-control" />
                            <span asp-validation-for="CategoryName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StyleIcon"></label>
                            <input asp-for="StyleIcon" class="form-control" />
                            <span asp-validation-for="StyleIcon"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StatusId"></label>
                            <input asp-for="StatusId" class="form-control" />
                            <span asp-validation-for="StatusId"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a class="btn btn-danger float-right" asp-action="Index">Geri Dön</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>