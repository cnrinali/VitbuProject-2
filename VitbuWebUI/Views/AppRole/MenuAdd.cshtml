@model Menu

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body table-responsive p-2">
                    <form asp-controller="AppRole" asp-action="MenuAdd" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Url"></label>
                            <input asp-for="Url" class="form-control" />
                            <span asp-validation-for="Url"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descreption"></label>
                            <input asp-for="Descreption" class="form-control" />
                            <span asp-validation-for="Descreption"></span>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MenuCategoryId, "Menü Kategori")
                            @Html.DropDownList("MenuCategoryId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label asp-for="StatusId"></label>
                            <input asp-for="StatusId" class="form-control" />
                            <span asp-validation-for="StatusId"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a class="btn btn-danger float-right" asp-action="Index">Geri Dön</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>