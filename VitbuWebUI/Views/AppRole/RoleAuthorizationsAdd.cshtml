@model RoleAuthorization

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body table-responsive p-2">
                    <form asp-controller="AppRole" asp-action="RoleAuthorizationsAdd" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            @Html.LabelFor(model => model.RoleId, "Rol")
                            @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MenuId, "Menü")
                            @Html.DropDownList("MenuId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label asp-for="StatusId"></label>
                            <input asp-for="StatusId" class="form-control" />
                            <span asp-validation-for="StatusId"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a class="btn btn-danger float-right" asp-action="Index">Geri Dön</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>