@model SuperAdminRoleViewModel

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <!-- /.card-header -->
                <div class="card-body">
                    <p class="p-rigth">
                        <a data-toggle="modal" data-target="#postmodel" href="#postmodel" class="btn btn-primary">
                            <span class="fa fa-edit"> Yeni</span>
                        </a>
                    </p>
                    <table id="example" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.MenuCategories[0].Id)</th>
                                <th>@Html.DisplayNameFor(model => model.MenuCategories[0].CategoryName)</th>
                                <th>@Html.DisplayNameFor(model => model.MenuCategories[0].StyleIcon)</th>
                                <th>@Html.DisplayNameFor(model => model.MenuCategories[0].StatusId)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.MenuCategories.Count; i++)
                            {
                                <tr>
                                    <td id="roleid">@Model.MenuCategories[i].Id</td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="categoryName"
                                               data-id="@Model.MenuCategories[i].Id"
                                               value="@Model.MenuCategories[i].CategoryName"
                                               asp-for="@Model.MenuCategories[i].CategoryName" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%; " />
                                    </td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="styleicon"
                                               data-id="@Model.MenuCategories[i].Id"
                                               value="@Model.MenuCategories[i].StyleIcon"
                                               asp-for="@Model.MenuCategories[i].StyleIcon" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%; " />
                                    </td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="status"
                                               data-id="@Model.MenuCategories[i].Id"
                                               value="@Model.MenuCategories[i].StatusId"
                                               asp-for="@Model.MenuCategories[i].StatusId" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%;" />
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" type="button" data-toggle="modal" data-target="@("#resultmodal" +Model.MenuCategories[i].Id)" href="@("#resultmodal" +Model.MenuCategories[i].Id)">
                                            <i class="fas fa-folder">
                                            </i>
                                            View
                                        </a>
                                        <a id="editlist" class="btn btn-info btn-sm" data-id="@Model.MenuCategories[i].Id">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </a>
                                        <a id="saveList" class="btn btn-info btn-sm" style="display:none;" data-id="@Model.MenuCategories[i].Id">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Kaydet
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteMenuCategory","AppRole", new { ID = Model.MenuCategories[i].Id})">
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@foreach (var rolemodal in (List<MenuCategory>)Model.MenuCategories)
{
    <div class="modal fade bd-example-modal-lg" id="@("resultmodal" +rolemodal.Id)" tabindex="-1" role="dialog" aria-labelledby="instructionsLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Menü Kategori</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body ml-5">
                    <p>@Html.DisplayNameFor(model => model.MenuCategories[0].CategoryName) : @rolemodal.CategoryName</p>
                    <p>@Html.DisplayNameFor(model => model.MenuCategories[0].StatusId) : @rolemodal.StatusId</p>
                </div>
            </div>
        </div>
    </div>
}
<div class="modal fade bd-example-modal-lg" id="postmodel" tabindex="-1" role="dialog" aria-labelledby="instructionsLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Rol Ekle</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body ml-12">
                <div class="form-group col-lg-12">
                    <label>Kategori Adı : </label>
                    <input type="text" class="form-control"
                           id="postcategoryname" />
                </div>
                <div class="form-group col-lg-12">
                    <label>İcon :</label>
                    <input type="text" class="form-control"
                           id="poststyleicon" />
                </div>
                <div class="form-group col-lg-12">
                    <label>Açıklaması :</label>
                    <input type="text" class="form-control"
                           id="postdescription" />
                </div>
                <div class="form-group col-lg-12">
                    <label>Statü :</label>
                    <input type="text" class="form-control"
                           id="poststatu" />
                </div>

                <a id="postmodel" href="#" class="btn btn-primary float-right">Kaydet</a>
            </div>
        </div>
    </div>
</div>
<script>$(function () {
        $('#example').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
        });
    });

    $('a#editlist').on('click', function () {
        var inputDataId = $(this).data('id');
        debugger;
        $(this).hide();
        $("#saveList[data-id='" + inputDataId + "']").show();
        $("input[data-id='" + inputDataId + "']").removeAttr('readonly');
    });

    $('a#saveList').on('click', function () {
        debugger;
        var inputDataId = $(this).data('id');
        $(this).hide();
        $("a#editlist[data-id='" + inputDataId + "']").show();
        $("input[data-id='" + inputDataId + "']").attr('readonly', 'readonly');
        var categoryName = $("input#categoryName[data-id='" + inputDataId + "']").val();
        var styleicon = $("input#styleicon[data-id='" + inputDataId + "']").val();
        var status = $("input#status[data-id='" + inputDataId + "']").val();
        $.post(location.origin + "/superadmin/menucategoryedit", {
            Id: inputDataId,
            CategoryName: categoryName,
            StyleIcon: styleicon,
            StatusId: status
        }, function (data) {
            if (data == "Başarılı!")
                createAlert('', data, 'Düzenleme işlemi başarılı şekilde gerçekleşti', 'success', true, true, 'pageMessages');
            else
                createAlert('Hata', data, 'Düzenleme işlemi başarısız şekilde gerçekleşti', 'danger', true, false, 'pageMessages');
        });
    })
    $('a#postmodel').on('click', function () {
        debugger;
        var postcategoryname = $("input#postcategoryname").val();
        var poststyleicon = $("input#poststyleicon").val();
        var postdescription = $("input#postdescription").val();
        var status = $("input#poststatu").val();
        $.post(location.origin + "/superadmin/menucategorymodaladd", {
            CategoryName: postcategoryname,
            StyleIcon: poststyleicon,
            Description: postdescription,
            StatusId: status
        }, function (data) {
            if (data == "Başarılı!") {
                createAlert('', data, 'Ekleme işlemi başarılı şekilde gerçekleşti', 'success', true, true, 'pageMessages');
                location.reload();
            }
            else
                createAlert('Hata', data, 'Ekleme işlemi başarısız şekilde gerçekleşti', 'danger', true, false, 'pageMessages');
        });
    })</script>