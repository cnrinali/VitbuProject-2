@model SuperAdminRoleViewModel

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <!-- /.card-header -->
                <div class="card-body">
                    <p class="p-rigth">
                        <a data-toggle="modal" data-target="#postmodel" href="#postmodel" class="btn btn-primary">
                            <span class="fa fa-edit"> Yeni</span>
                        </a>
                    </p>
                    <table id="example" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Users[0].Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Users[0].Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Users[0].Surname)</th>
                                <th>@Html.DisplayNameFor(model => model.Users[0].IdentityNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.Users[0].Phone)</th>
                                <th>@Html.DisplayNameFor(model => model.Users[0].Mail)</th>
                                <th>@Html.DisplayNameFor(model => model.Users[0].Address)</th>
                                <th>@Html.DisplayNameFor(model => model.Users[0].UserName)</th>
                                <th>@Html.DisplayNameFor(model => model.Users[0].Password)</th>
                                <th>@Html.DisplayNameFor(model => model.Users[0].Company)</th>
                                <th>@Html.DisplayNameFor(model => model.Users[0].StatusId)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Users.Count; i++)
                            {
                                <tr>
                                    <td>@Model.Users[i].Id</td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="Name"
                                               data-id="@Model.Users[i].Id"
                                               value="@Model.Users[i].Name"
                                               asp-for="@Model.Users[i].Name" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%; " />
                                    </td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="Surname"
                                               data-id="@Model.Users[i].Id"
                                               value="@Model.Users[i].Surname"
                                               asp-for="@Model.Users[i].Surname" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%; " />
                                    </td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="IdentityNumber"
                                               data-id="@Model.Users[i].Id"
                                               value="@Model.Users[i].IdentityNumber"
                                               asp-for="@Model.Users[i].IdentityNumber" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%; " />
                                    </td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="Phone"
                                               data-id="@Model.Users[i].Id"
                                               value="@Model.Users[i].Phone"
                                               asp-for="@Model.Users[i].Phone" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%; " />
                                    </td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="Mail"
                                               data-id="@Model.Users[i].Id"
                                               value="@Model.Users[i].Mail"
                                               asp-for="@Model.Users[i].Mail" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%; " />
                                    </td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="Address"
                                               data-id="@Model.Users[i].Id"
                                               value="@Model.Users[i].Address"
                                               asp-for="@Model.Users[i].Address" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%; " />
                                    </td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="UserName"
                                               data-id="@Model.Users[i].Id"
                                               value="@Model.Users[i].UserName"
                                               asp-for="@Model.Users[i].UserName" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%; " />
                                    </td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="Password"
                                               data-id="@Model.Users[i].Id"
                                               value="@Model.Users[i].Password"
                                               asp-for="@Model.Users[i].Password" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%; " />
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            @Html.DropDownListFor(model => Model.Users[i].CompanyId, new SelectList(ViewBag.CompanyId, "Id", "CompanyName", Model.Users[i].CompanyId), null, htmlAttributes: new { @class = "form-control", @disabled = "true", @id = "CompanyId", data_bind = @Model.Users[i].Id })
                                        </div>
                                    </td>
                                    <td>
                                        <input type="text"
                                               readonly
                                               id="StatusId"
                                               data-id="@Model.Users[i].Id"
                                               value="@Model.Users[i].StatusId"
                                               asp-for="@Model.Users[i].StatusId" style="background: none; color: black; background-color: transparent; border: 0px solid; width: 100%; height: 100%; " />
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" type="button" data-toggle="modal" data-target="@("#resultmodal" +Model.Users[i].Id)" href="@("#resultmodal" +Model.Users[i].Id)">
                                            <i class="fas fa-folder">
                                            </i>
                                            View
                                        </a>
                                        <a id="editlist" class="btn btn-info btn-sm" data_bind="@Model.Users[i].Id">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </a>
                                        <a id="saveList" class="btn btn-info btn-sm" style="display:none;" data_bind="@Model.Users[i].Id">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Kaydet
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteUser","User", new { ID = Model.Users[i].Id})">
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@foreach (var rolemodal in (List<User>)Model.Users)
{
    <div class="modal fade bd-example-modal-lg" id="@("resultmodal" +rolemodal.Id)" tabindex="-1" role="dialog" aria-labelledby="instructionsLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Roller</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body ml-5">
                    <p>@Html.DisplayNameFor(model => model.Users[0].Name) : @rolemodal.Name</p>
                    <p>@Html.DisplayNameFor(model => model.Users[0].Surname) : @rolemodal.Surname</p>
                    <p>@Html.DisplayNameFor(model => model.Users[0].IdentityNumber) : @rolemodal.IdentityNumber</p>
                    <p>@Html.DisplayNameFor(model => model.Users[0].Phone) : @rolemodal.Phone</p>
                    <p>@Html.DisplayNameFor(model => model.Users[0].Mail) : @rolemodal.Mail</p>
                    <p>@Html.DisplayNameFor(model => model.Users[0].Address) : @rolemodal.Address</p>
                    <p>@Html.DisplayNameFor(model => model.Users[0].UserName) : @rolemodal.UserName</p>
                    <p>@Html.DisplayNameFor(model => model.Users[0].Password) : @rolemodal.Password</p>
                    <p>@Html.DisplayNameFor(model => model.UserRoles[0].User) : @Model.Companies.Where(x => x.Id == rolemodal.CompanyId).First().CompanyName</p>
                    <p>@Html.DisplayNameFor(model => model.Users[0].StatusId) : @rolemodal.StatusId</p>
                </div>
            </div>
        </div>
    </div>
}
<div class="modal fade bd-example-modal-lg" id="postmodel" tabindex="-1" role="dialog" aria-labelledby="instructionsLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Şirket Ekle</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body ml-12">
                <div class="form-group col-lg-12">
                    <div class="form-group">
                        <label>Adı :</label>
                        <input class="form-control" type="text"
                               id="postname" />
                    </div>
                    <div class="form-group">
                        <label>Soyadı :</label>
                        <input class="form-control" type="text"
                               id="postsurname" />
                    </div>
                    <div class="form-group">
                        <label>Tc No :</label>
                        <input class="form-control" type="text"
                               id="postidentitynumber" />
                    </div>
                    <div class="form-group">
                        <label>Telefon No :</label>
                        <input class="form-control" type="text"
                               id="postphone" />
                    </div>
                    <div class="form-group">
                        <label>Mail Adresi :</label>
                        <input class="form-control" type="text"
                               id="postmail" />
                    </div>
                    <div class="form-group">
                        <label>Adres :</label>
                        <input class="form-control" type="text"
                               id="postaddress" />
                    </div>
                    <div class="form-group">
                        <label>Kullanıcı Adı :</label>
                        <input class="form-control" type="text"
                               id="postusername" />
                    </div>
                    <div class="form-group">
                        <label>Parola :</label>
                        <input class="form-control" type="text"
                               id="postpassword" />
                    </div>
                    <div class="form-group">
                        <label>Şirket :</label>
                        @Html.DropDownList("CompanyId", new SelectList(ViewBag.CompanyId, "Id", "CompanyName", null), null, htmlAttributes: new { @class = "form-control", @id = "postcompany" })
                    </div>
                    <div class="form-group">
                        <label>Açıklama :</label>
                        <input class="form-control" type="text"
                               id="postdescreption" />
                    </div>
                    <div class="form-group">
                        <label>Statü :</label>
                        <input class="form-control" type="text"
                               id="poststatu" />
                    </div>
                </div>
                <a id="postmodel" href="#" class="btn btn-primary float-right">Kaydet</a>
            </div>
        </div>
    </div>
</div>

<script>$(function () {
        $('#example').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
        });
    });

    $('a#editlist').on('click', function () {
        var inputDataId = $(this).attr('data_bind');
        debugger;
        $(this).hide();
        $("#saveList[data_bind='" + inputDataId + "']").show();
        $("input[data-id='" + inputDataId + "']").removeAttr('readonly');
        $("select[data-bind='" + inputDataId + "']").removeAttr('disabled');
    });

    $('a#saveList').on('click', function () {
        debugger;
        var inputDataId = $(this).attr('data_bind');
        $(this).hide();
        $("a#editlist[data_bind='" + inputDataId + "']").show();
        $("select[data-bind='" + inputDataId + "']").attr('disabled', 'true');
        $("input[data-id='" + inputDataId + "']").attr('readonly', 'readonly');
        var Name = $("input#Name[data-id='" + inputDataId + "']").val();
        var Surname = $("input#Surname[data-id='" + inputDataId + "']").val();
        var IdentityNumber = $("input#IdentityNumber[data-id='" + inputDataId + "']").val();
        var Phone = $("input#Phone[data-id='" + inputDataId + "']").val();
        var Mail = $("input#Mail[data-id='" + inputDataId + "']").val();
        var UserName = $("input#UserName[data-id='" + inputDataId + "']").val();
        var Address = $("input#Address[data-id='" + inputDataId + "']").val();
        var Password = $("input#Password[data-id='" + inputDataId + "']").val();
        var CompanyId = $("select#CompanyId[data-bind='" + inputDataId + "']").val();
        var Description = $("input#Description[data-id='" + inputDataId + "']").val();
        var StatusId = $("input#StatusId[data-id='" + inputDataId + "']").val();
        $.post(location.origin + "/useredit", {
            Id: inputDataId,
            Name: Name,
            Surname: Surname,
            IdentityNumber: IdentityNumber,
            Phone: Phone,
            Mail: Mail,
            UserName: UserName,
            Address: Address,
            Password: Password,
            CompanyId: CompanyId,
            Description: Description,
            StatusId: StatusId,
        }, function (data) {
            if (data == "Başarılı!")
                createAlert('', data, 'Düzenleme işlemi başarılı şekilde gerçekleşti', 'success', true, true, 'pageMessages');
            else
                createAlert('Hata', data, 'Düzenleme işlemi başarısız şekilde gerçekleşti', 'danger', true, false, 'pageMessages');
        });
    })
    $('a#postmodel').on('click', function () {
        debugger;
        var postname = $("input#postname").val();
        var postsurname = $("input#postsurname").val();
        var postidentitynumber = $("input#postidentitynumber").val();
        var postphone = $("input#postphone").val();
        var postmail = $("input#postmail").val();
        var postaddress = $("input#postaddress").val();
        var postusername = $("input#postusername").val();
        var postpassword = $("input#postpassword").val();
        var postcompany = $("select#postcompany").val();
        var postdescreption = $("input#postdescreption").val();
        var status = $("input#poststatu").val();
        $.post(location.origin + "/usermodaladd", {
            Name: postname,
            Surname: postsurname,
            IdentityNumber: postidentitynumber,
            Phone: postphone,
            Mail: postmail,
            UserName: postusername,
            Address: postaddress,
            Password: postpassword,
            CompanyId: postcompany,
            Description: postdescreption,
            StatusId: status
        }, function (data) {
            if (data == "Başarılı!") {
                createAlert('', data, 'Ekleme işlemi başarılı şekilde gerçekleşti', 'success', true, true, 'pageMessages');
                location.reload();
            }
            else
                createAlert('Hata', data, 'Ekleme işlemi başarısız şekilde gerçekleşti', 'danger', true, false, 'pageMessages');
        });
    })</script>